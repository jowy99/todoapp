# DBngin local admin database. Used only by `pnpm db:create` to create the app DB.
DATABASE_ADMIN_URL="postgresql://postgres:CHANGE_ME@localhost:5432/postgres?schema=public"

# Main application database used by Prisma and Next.js.
DATABASE_URL="postgresql://postgres:CHANGE_ME@localhost:5432/todo_list?schema=public"

# Auth session settings.
SESSION_COOKIE_NAME="todo_session"
SESSION_TTL_DAYS="30"

# App base URL for OAuth callbacks and integration links.
APP_BASE_URL="http://localhost:3000"

# Google Calendar OAuth (required only if you enable Google integration).
GOOGLE_CLIENT_ID="CHANGE_ME"
GOOGLE_CLIENT_SECRET="CHANGE_ME"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/integrations/google/callback"

# Optional but recommended: 32-byte key (64 hex chars or base64) to encrypt stored integration tokens.
INTEGRATION_ENCRYPTION_KEY=""
